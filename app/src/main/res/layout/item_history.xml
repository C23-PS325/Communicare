<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="c23.ps325.communicare.database.PredictionHistory" />
    </data>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil Analisa"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:text="@{`Date : ` + item.date}"
                android:textSize="14sp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/tv_label_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Face Expression"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="#C12552"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="30dp"
                        android:layout_width="62dp"
                        android:layout_height="62dp">

                        <TextView
                            android:id="@+id/tv_angry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:hint="0.0"
                            android:text="@{Double.toString(item.angry)}"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center"
                        android:text="Angry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="#B36435"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="30dp"
                        android:layout_width="62dp"
                        android:layout_height="62dp">

                        <TextView
                            android:id="@+id/tv_fear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Double.toString(item.fear)}"
                            android:textSize="18sp"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:hint="100.0"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center"
                        android:text="Fear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="#6A961F"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="30dp"
                        android:layout_width="62dp"
                        android:layout_height="62dp">

                        <TextView
                            android:id="@+id/tv_happy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Double.toString(item.happy)}"
                            android:textSize="18sp"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:hint="100.0"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center"
                        android:text="Happy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="#FF6600"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="30dp"
                        android:layout_width="62dp"
                        android:layout_height="62dp">

                        <TextView
                            android:id="@+id/tv_sad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Double.toString(item.sad)}"
                            android:textSize="18sp"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:hint="100.0"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center"
                        android:text="Sad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="#F5C700"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="30dp"
                        android:layout_width="62dp"
                        android:layout_height="62dp">

                        <TextView
                            android:id="@+id/tv_surprise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Double.toString(item.surprise)}"
                            android:textSize="18sp"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            android:hint="100.0"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center"
                        android:text="Surprise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_label_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sound Emotion Result"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tv_sound_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`Sound Emotion : ` + item.soundEmotion}" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>